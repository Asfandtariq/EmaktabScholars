<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pure_white"
    tools:context=".MainMenuFragment"

    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="190dp"
        android:background="@color/fb_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/dashboard_power_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_power_settings_new_black_24dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/project_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/education"
            android:textColor="@color/info_back"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/dashboard_power_btn"
            app:layout_constraintStart_toEndOf="@+id/dashboard_back_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/dashboard_back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="2dp"

            android:background="@drawable/student_icon_male_new_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asfand Tariq"
            android:textColor="@color/pure_white"

            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />


    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="24dp"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout">


        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"

            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <android.support.v7.widget.CardView
                        android:id="@+id/menu_announcement_btn"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"

                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="@color/cardTint"
                        android:foregroundGravity="center"
                        app:cardBackgroundColor="@color/background"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="@dimen/card_padding_dashboard"
                        app:contentPaddingBottom="@dimen/card_padding_dashboard"
                        app:contentPaddingLeft="@dimen/card_padding_dashboard"
                        app:contentPaddingRight="@dimen/card_padding_dashboard"
                        app:contentPaddingTop="@dimen/card_padding_dashboard"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/menu_test_btn">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"

                            >

                            <Button
                                android:id="@+id/button"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="25dp"

                                android:layout_marginTop="10dp"
                                android:layout_marginRight="25dp"
                                android:background="@drawable/announcement_new_1"
                                android:backgroundTint="@color/imgTint" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:layout_marginBottom="5dp"
                                android:text="@string/announcements"
                                android:textColor="@color/imgTint"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/menu_attendence_btn"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"


                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/cardTint"
                        app:cardBackgroundColor="@color/background"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="@dimen/card_padding_dashboard"
                        app:contentPaddingBottom="@dimen/card_padding_dashboard"
                        app:contentPaddingLeft="@dimen/card_padding_dashboard"
                        app:contentPaddingRight="@dimen/card_padding_dashboard"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:clickable="false"
                            android:focusable="false"
                            android:duplicateParentState="true"
                            >

                            <Button
                                android:clickable="false"
                                android:focusable="false"
                                android:duplicateParentState="true"
                                android:id="@+id/button2"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="25dp"
                                android:background="@drawable/attendence"
                                android:backgroundTint="@color/imgTint"
                                tools:layout_editor_absoluteX="325dp"
                                tools:layout_editor_absoluteY="117dp" />

                            <TextView
                                android:clickable="false"
                                android:focusable="false"
                                android:duplicateParentState="true"
                                android:id="@+id/textView4"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="17dp"
                                android:layout_marginEnd="12dp"
                                android:layout_marginBottom="5dp"
                                android:text="@string/attendence"
                                android:textColor="@color/imgTint"
                                android:textStyle="bold"
                                tools:layout_editor_absoluteX="248dp"
                                tools:layout_editor_absoluteY="217dp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardView5"
                        android:layout_width="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"


                        android:layout_marginEnd="10dp"
                        android:backgroundTint="@color/cardTint"
                        app:cardBackgroundColor="@color/background"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="@dimen/card_padding_dashboard"
                        app:contentPaddingBottom="@dimen/card_padding_dashboard"
                        app:contentPaddingLeft="@dimen/card_padding_dashboard"
                        app:contentPaddingRight="@dimen/card_padding_dashboard"
                        app:contentPaddingTop="@dimen/card_padding_dashboard"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/menu_fees_btn">

                        <LinearLayout
                            android:clickable="false"
                            android:focusable="false"
                            android:duplicateParentState="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <Button
                                android:clickable="false"
                                android:focusable="false"
                                android:duplicateParentState="true"
                                android:id="@+id/button5"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="25dp"
                                android:background="@drawable/exam_new_1"
                                android:backgroundTint="@color/imgTint"
                                tools:layout_editor_absoluteX="52dp"
                                tools:layout_editor_absoluteY="269dp" />

                            <TextView
                                android:clickable="false"
                                android:focusable="false"
                                android:duplicateParentState="true"
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="35dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginBottom="5dp"
                                android:text="@string/exam"
                                android:textColor="@color/imgTint"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/menu_test_btn"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"


                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/cardTint"
                        app:cardBackgroundColor="@color/background"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="@dimen/card_padding_dashboard"
                        app:contentPaddingBottom="@dimen/card_padding_dashboard"
                        app:contentPaddingLeft="@dimen/card_padding_dashboard"
                        app:contentPaddingRight="@dimen/card_padding_dashboard"
                        app:contentPaddingTop="@dimen/card_padding_dashboard"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/menu_attendence_btn">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/button6"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="25dp"
                                android:background="@drawable/test_new_1"
                                android:backgroundTint="@color/imgTint" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="40dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="@string/test"
                                android:textColor="@color/imgTint"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/menu_fees_btn"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:focusable="true"
                        android:clickable="true"


                        android:layout_marginEnd="10dp"
                        android:backgroundTint="@color/cardTint"
                        app:cardBackgroundColor="@color/background"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="@dimen/card_padding_dashboard"
                        app:contentPaddingBottom="@dimen/card_padding_dashboard"
                        app:contentPaddingLeft="@dimen/card_padding_dashboard"
                        app:contentPaddingRight="@dimen/card_padding_dashboard"
                        app:contentPaddingTop="@dimen/card_padding_dashboard"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:clickable="false"
                            android:focusable="false"
                            android:duplicateParentState="true"
                            >

                            <Button
                                android:id="@+id/button7"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="25dp"
                                android:background="@drawable/fee_new_1"
                                android:backgroundTint="@color/imgTint"
                                android:clickable="false"
                                android:focusable="false"
                                android:duplicateParentState="true"
                                />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="40dp"
                                android:layout_marginEnd="25dp"
                                android:layout_marginBottom="5dp"
                                android:text="@string/fee"
                                android:textColor="@color/imgTint"
                                android:textStyle="bold"
                                android:clickable="false"
                                android:focusable="false"
                                android:duplicateParentState="true"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/menu_feedback_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"


                        android:layout_marginBottom="10dp"
                        android:backgroundTint="@color/cardTint"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/background"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="@dimen/card_padding_dashboard"
                        app:contentPaddingBottom="@dimen/card_padding_dashboard"
                        app:contentPaddingLeft="@dimen/card_padding_dashboard"
                        app:contentPaddingRight="@dimen/card_padding_dashboard"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardView5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="false"
                            android:duplicateParentState="true"
                            android:focusable="false"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/button8"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="25dp"
                                android:background="@drawable/feedback_new1"
                                android:backgroundTint="@color/imgTint"
                                android:clickable="false"
                                android:duplicateParentState="true"
                                android:focusable="false" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginEnd="25dp"
                                android:layout_marginBottom="5dp"
                                android:clickable="false"
                                android:duplicateParentState="true"
                                android:focusable="false"
                                android:text="@string/feedback"
                                android:textColor="@color/imgTint"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </android.support.constraint.ConstraintLayout>
            </ScrollView>
        </android.support.v7.widget.CardView>


    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/powered_by"
        android:textColor="@color/fb_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</android.support.constraint.ConstraintLayout>